        <TextBox MaxLength="3" x:Name="tb_x" HorizontalAlignment="Left" Height="23" Margin="94,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox MaxLength="3" x:Name="tb_y" HorizontalAlignment="Left" Height="23" Margin="94,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_x" Content="x:" HorizontalAlignment="Left" Margin="46,83,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_y" Content="y:" HorizontalAlignment="Left" Margin="46,117,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_Name" HorizontalAlignment="Left" Height="23" Margin="94,161,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_Name" Content="Name:" HorizontalAlignment="Left" Margin="20,158,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.523,0.538"/>

    </Grid>
</Window>
